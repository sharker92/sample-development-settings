	name = Victor Dozal
	email = v.dozal@live.com
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

        # Git Commit, Add all and Push — in one step.
        cap = "!f() { git commit -m \"$@\"; }; f"

        # NEW.
        new = "!f() { git cap \"📦 NEW: $@\"; }; f"
        # IMPROVE.
        imp = "!f() { git cap \"👌 IMPROVE: $@\"; }; f"
        # FIX.
        fix = "!f() { git cap \"🐛 FIX: $@\"; }; f"
        # RELEASE.
        rlz = "!f() { git cap \"🚀 RELEASE: $@\"; }; f"
        # DOC.
        doc = "!f() { git cap \"📖 DOC: $@\"; }; f"
        # TEST.
        tst = "!f() { git cap \"✅ TEST: $@\"; }; f"
